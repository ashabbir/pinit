@using Microsoft.AspNet.Identity

@model pinit.Models.ManageUserViewModel



@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{

     
  
    @Html.ErrorAlert(true)
    @Html.AntiForgeryToken()
    <h4>Change Password</h4>
    <hr />
   
     <div class="form-group">
      
        <div class="col-md-offset-4 col-md-4">
            <p>You're logged in as <strong>@User.Identity.GetUserName()</strong>.</p>
        </div>
    </div>
    
    
    <div class="form-group">
      
        <div class="col-md-offset-4 col-md-4">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control"  , @placeholder ="Old password"})
            @Html.ValidationMessageFor(m => m.OldPassword)
        </div>
    </div>
    <div class="form-group">
      
        <div class="col-md-offset-4 col-md-4">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" , @placeholder = "New password"})
            @Html.ValidationMessageFor(m => m.NewPassword)
        </div>
    </div>
    <div class="form-group">
       
        <div class="col-md-offset-4 col-md-4">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Confirm password" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-4 col-md-4">
            <input type="submit" value="Change password" class="btn btn-lg btn-primary btn-block" />
        </div>
    </div>
}
