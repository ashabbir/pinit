@model IEnumerable<pinit.Data.Board>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BoardName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrivateComments)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BoardOwner)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BoardName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreated)
        </td>
        <td>
            @if(item.PrivateComments != true)
            {  
               <img src="~/Content/comments.jpg" alt="Comments allowed" /> 
            } 
            else 
            { 
                <img src="~/Content/nocomments.jpg" alt="No comments"/> 
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BoardOwner)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BoardId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BoardId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BoardId })
        </td>
    </tr>
}

</table>
