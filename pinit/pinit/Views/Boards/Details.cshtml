@model pinit.Data.Board

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






<div class="container theme-showcase">
    <div class="center-block">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">@Html.DisplayTextFor(model => model.BoardName) </h3>

            </div>
            <div class="panel-body">
                @ViewBag.StatusMessage
                @using (Html.BeginForm("CreatePin", "Boards", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.ErrorAlert(true)
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.BoardId);
                    <ul class="list-inline">
                        @*<li>  <input type="file" name="upload" value="" id="upload" class="form-control"></li>*@
                        <li>  @Html.TextBox("txtPinUrl", null, new { @class = "form-control" })  </li>
                        <li>  <input class="btn btn-sm btn-primary" type="submit" value="Pin It" /></li>
                    </ul>
                }

                <hr>
            
            @Html.Partial("_PinsPartial", Model.Pins)   


            </div><!-- /.panel-body -->
            <div class="panel-footer">
                <p class="form-inline">
                    created by @Html.DisplayTextFor(model => model.BoardOwner) on @Html.DisplayTextFor(model => model.DateCreated)
                    @if (Model.PrivateComments != true)
                    {
                        <img src="~/Content/comments.jpg" alt="Comments allowed" />
                    }
                    else
                    {
                        <img src="~/Content/nocomments.jpg" alt="No comments" />
                    }
                    @Html.ActionLink("Edit", "Edit", new { id = Model.BoardId }) |
                    @Html.ActionLink("Back to List", "Index") |
                    @Html.ActionLink("Delete", "Delete", new { id = Model.BoardId })

                </p>
            </div>


        </div><!-- panel panel-default-->

    </div><!--center -->
</div> <!-- /container -->
