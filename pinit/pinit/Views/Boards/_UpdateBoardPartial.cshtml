@model pinit.Data.Board


@using (Html.BeginForm("Edit", "Boards", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ErrorAlert(true)
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Edit Board</h4>
        <hr />
       
        @Html.HiddenFor(model => model.BoardId)
        @Html.HiddenFor(model => model.BoardOwner)
        @Html.HiddenFor(model => model.DateCreated)

        <div class="form-group">
            <div class="col-md-offset-4 col-md-4">
                @Html.TextBoxFor(model => model.BoardName, new { @class = "form-control", @placeholder = "Board Name" })
                @Html.ValidationMessageFor(model => model.BoardName)
            </div>
        </div>

        <div class="form-group"> 
            <div class="col-md-offset-4 col-md-4">
                @Html.Label("Private (no comments allowed)")
                @Html.EditorFor(model => model.PrivateComments )
                @Html.ValidationMessageFor(model => model.PrivateComments)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-4">
                <input type="submit" value="Save" class="btn btn-lg btn-primary btn-block" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index") |
    @Html.ActionLink("Details", "Details", new { id = Model.BoardId }) |
    @Html.ActionLink("Delete", "Delete", new { id = Model.BoardId }) 
</div>
