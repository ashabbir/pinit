@model pinit.Data.Board

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container theme-showcase">
    <div class="center-block">
        <div class="panel panel-default">
            <div class="panel-body">
                <h3>Are you sure you want to delete this?</h3>
                <hr />
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-4">
                        @Html.DisplayFor(model => model.BoardName)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-4">
                        @Html.DisplayFor(model => model.DateCreated)
                    
                        @if (Model.PrivateComments != true)
                        {
                            <img src="~/Content/comments.jpg" alt="Comments allowed" />
                        }
                        else
                        {
                            <img src="~/Content/nocomments.jpg" alt="No comments" />
                        }
                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.ErrorAlert(true)
                    @Html.AntiForgeryToken()

                    <div class="col-md-offset-4 col-md-4">
                        <input type="submit" value="Delete" class="btn btn-sm btn-primary btn-block" />

                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-4">
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>