@model pinit.Data.Board

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ErrorAlert(true)
    <div class="form-horizontal">
        <h4>Board</h4>
        <hr />
      

        <div class="form-group">
            @Html.Label("Board Name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BoardName)
                @Html.ValidationMessageFor(model => model.BoardName)
            </div>
        </div>
        
        <div class="form-group">
            @Html.Label("Commentable", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PrivateComments)
                @Html.ValidationMessageFor(model => model.PrivateComments)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
