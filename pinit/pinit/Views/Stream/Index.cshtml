@model IEnumerable<pinit.Data.FollowStream>

@{
    ViewBag.Title = "Index";
}




@Html.ErrorAlert(true)
<p>
    @Html.ActionLink("Create New", "CreateStream")
</p>


@if (Model.Count() > 0)
{
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title">Streams</h3>
        </div>
        <div class="panel-body">
            <ul class="list-group">
                @foreach (var item in Model)
                {
                    <li class="list-group-item">
                        @*<span class="badge"> @Html.ActionLink("Edit", "Edit", new { id=item.StreamId })</span>*@
                        <span class="badge">@Html.ActionLink("Details", "Details", new { id = item.StreamId })</span>
                        <span class="badge"> @Html.ActionLink("Delete", "Delete", new { id = item.StreamId })</span>
                        @Html.DisplayFor(modelItem => item.StreamName)
                    </li>
                }
            </ul>
        </div>
        <div class="panel-footer">
            <em class="text-info">Your streams</em>
        </div>
    </div>

}



