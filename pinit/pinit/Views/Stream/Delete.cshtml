@model pinit.Data.FollowStream

@{
    ViewBag.Title = "Delete";
}



<div class="container theme-showcase">
    <div class="center-block">
        <div class="panel panel-default">
            <div class="panel-body">
                <h3>Are you sure you want to delete this Stream? (@Html.DisplayTextFor(model => model.StreamName) )</h3>
                <hr />
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-4">
                        @Html.DisplayFor(model => model.StreamName)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-4">
                        @Html.DisplayFor(model => model.DateCreated)

                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.ErrorAlert(true)
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.StreamId)
                    
                    <div class="col-md-offset-4 col-md-4">
                        <input type="submit" value="Delete" class="btn btn-sm btn-primary" />

                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-4">
                           @Html.ActionLink("Back", "Index")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>











