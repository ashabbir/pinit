@model IEnumerable<pinit.Data.Pin>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>



<div class="container theme-showcase">
    @Html.ErrorAlert(true)
    <div class="center-block">

        @Html.Partial("_SearchTagPartial")

        @if (Model.Count() > 0)
        {
            <div class="panel panel-default ">
                <div class="panel-body">
                    <div class="bs-example table-responsive">
                        <p class="text-info">@ViewBag.message</p>

                       
                            @Html.Partial("_PinsPartial", Model)
                        



                    </div>
                </div>
                <div class="panel-footer">
                    <em class="text-info"></em>
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-default ">
                <div class="panel-body">
                    <p>@ViewBag.message</p>
                </div>

            </div>
        }
    </div><!--center -->
</div> <!-- /container -->
