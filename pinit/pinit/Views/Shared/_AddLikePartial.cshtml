@model pinit.Data.UserLike


@{
    int likes = 0;
    likes = ViewBag.Likes;
}


@using (Html.BeginForm("AddLike", "Pin", FormMethod.Post))
{
 
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.UserName)
        @Html.HiddenFor(m => m.PinId)

        <ul class="list-inline">

            <li> @Html.DisplayLikes(likes)</li>
            @if (ViewBag.Likeable)
            {
                <li><input type="submit" value="like" class=" btn-link" /></li>
            }
        </ul>
  

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
