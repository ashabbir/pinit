@model IEnumerable<pinit.Data.Board>
@if (Model.Count() > 0)
    {
<ul class="list-inline">
    
        @foreach (var item in Model)
        {
        <li>
            <p>
                @Html.ActionBoard("Details", "boards", new { id = item.BoardId }, (item.Pins.FirstOrDefault() != null) ? item.Pins.FirstOrDefault().Picture.ImageUrl  : "~/Content/board.jpg", item.BoardName)
                @item.BoardName
            </p>
        </li>
        }
   
</ul>

    }
else
{
    <p>You have no boards</p>
}

