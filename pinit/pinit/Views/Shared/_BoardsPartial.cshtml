@model IEnumerable<pinit.Data.Board>
@using Microsoft.AspNet.Identity

<div class="panel panel-primary">
    <div class="panel-heading">
        Boards
    </div>
    <div class="panel-body">
        @if (Model.Count() > 0)
        {
            <ul class="list-inline">

                @foreach (var item in Model)
                {
                    <li>
                        <p>
                            @Html.ActionBoard("Details", "boards", new { id = item.BoardId }, (item.Pins.FirstOrDefault() != null) ?
                            item.Pins.FirstOrDefault().Picture.ImageUrl : "~/Content/board.jpg", item.BoardName)
                            @item.BoardName
                        </p>
                    </li>
                }

            </ul>

        }
        else
        {
            <p>there are no boards</p>
        }

    </div><!-- /.panel-body -->
</div><!-- panel panel-default-->
