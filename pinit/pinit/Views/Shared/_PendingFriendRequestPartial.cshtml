@model IEnumerable<pinit.Models.UserFriend>



@if (Model.Count() > 0)
            {
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Pending</h3>
        </div>
        <div class="panel-body">
            <ul class="list-group">
                @foreach (var item in Model)
                {
                    <li class="list-group-item">
                        <span class="badge">@Html.ActionLink("Accept", "AcceptRequest", "FriendShip" ,  new { id = item.PersonalInfo.UserName } , null)</span>
                        <span class="badge">@Html.ActionLink("Reject", "RejectRequest", "FriendShip",  new { id = item.PersonalInfo.UserName } , null)</span>
                        @Html.DisplayFor(modelItem => item.PersonalInfo.FirstName) @Html.DisplayFor(modelItem => item.PersonalInfo.LastName)
                    </li>
                }
            </ul>
        </div>
        <div class="panel-footer">
            <em class="text-info">These are the friend ship request people have made for you. You need to act on them</em>
        </div>
    </div>
}


